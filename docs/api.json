{
	"openapi": "3.0.0",
	"info": {
		"version": "v.0.1",
		"title": "FindMyPk",
		"license": {
			"name": "MIT"
		}
	},
	"servers": [{
		"url": "https://findmypk.wolk.com:8080"
	}],
	"paths": {
		"/fmreport": {
			"post": {
				"tags": [
					"ble"
				],
				"summary": "POST REPORT with FMKeys (submitted upon Recording Symptoms/Infections)",
				"requestBody": {
					"description": "When users report data in an app following the FindMyPk protocol, the app sends a FMReport revealing symptoms/infection along with CENKeys",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/FMReport"
							}
						}
					},
					"required": true
				},
				"responses": {
					"200": {
						"description": "200 - OK",
						"content": {
							"text/plain": {
								"schema": {
									"type": "string"
								}
							}
						}
					},
					"400": {
						"description": "400 - Error String",
						"content": {
							"text/plain": {
								"schema": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		},
		"/fmreport/{timestamp}": {
			"get": {
				"tags": [
					"ble-core"
				],
				"summary": "FMKeys Check (periodic polling for newly posted keys)",
				"description": "An app following the FindMyPk protocol polls this endpoint every few minutes/hours for new FMKeys",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"schema": {
								"type": "integer"
						},
						"required": true
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ExposureCheckResponse"
								},
								"examples": {
									"onecontact": {
										"value": ["SlNPTkJMT0I6c2V2ZXJlIGZldmVyLGNvdWdoaW5n"]
									}
								}
							}
						}
					},
					"400": {
						"description": "400 - Error String",
						"content": {
							"text/plain": {
								"schema": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"FMArray": {
				"type": "array",
				"properties": {
						"type": "string"
				}
			},
			"FMReport": {
				"type": "object",
				"required": [
					"report",
					"fmKeys"
				],
				"properties": {
					"report": {
						"type": "string"
					},
					"fmKeys": {
						"type": "string"
					},
					"reportMimeType": {
						"type": "string"
					},
					"reportTimestamp": {
						"type": "integer"
					}
				}
			},
			"Error": {
				"type": "object",
				"required": [
					"code",
					"message"
				],
				"properties": {
					"code": {
						"type": "integer",
						"format": "int32"
					},
					"message": {
						"type": "string"
					}
				}
			}
		}
	}
}
